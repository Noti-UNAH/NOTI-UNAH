---
//Pagina de Inicio
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Banner from '../components/Banner.astro';
import SectionHeader from '../components/SectionHeader.astro';
import SectionBody from '../components/SectionBody.astro';
import Footer from '../components/Footer.astro';
//Se importa la Plantilla a usar y los componentes que conformaran la pagina
// los guiones bajo (-) dividen el apartado de astro para los import
---
<!-- Se hace uso de los elementos-->
<!-- Plantilla que recibe un valor tipo texto porque asi fue declarado en tu archivo-->
<Layout title="NOTI-UNAH.">
	<!-- Elementos que conformaran la pagina -->
	<Header/>
	<Banner title="NOTI-UNAH" descripcion="¿Qué leerás el día de hoy?"/>
	<!-- banner recibe un titulo y descripcion tipo texto-->
	<SectionHeader/>
	<SectionBody/>
	<Footer/>
</Layout>

