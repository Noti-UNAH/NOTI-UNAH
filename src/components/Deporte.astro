---
import CardNote from "./CardNote.astro";
import Cardsmall from "./Card.astro";

const response = await fetch("https://noti-unah.herokuapp.com/");
const data = await response.json();
---

<div class="container p-3">
  <CardNote />
  <div class="row">
    <h3>Noticias relacionadas</h3>
  </div>
  <div class="row">
    <div class="col">
      <Cardsmall
        src={data[14].img}
        fecha={data[14].fecha}
        href="/posts/15"
        title={data[14].title}
        body={data[14].descr}
      />
    </div>
    <div class="col">
      <Cardsmall
        src={data[15].img}
        fecha={data[15].fecha}
        href="/posts/16"
        title={data[15].title}
        body={data[15].descr}
      />
    </div>
    <div class="col">
      <Cardsmall
        src={data[16].img}
        fecha={data[16].fecha}
        href="/posts/17"
        title={data[16].title}
        body={data[16].descr}
      />
    </div>
  </div>
</div>