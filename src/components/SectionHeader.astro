---
const response = await fetch("http://127.0.0.1:8000/");
const data = await response.json();
---
<section class="section pb-0">
  <div class="container">
    <div class="row">
      <div class="col-lg-4 mb-5">
        <h2 class="h5 section-title">Nuevo</h2>
        <article class="card">
          <div class="post-slider slider-sm">
            <img
              src={data[0].img}
              class="card-img-top"
              alt="post-thumb"
            />
          </div>

          <div class="card-body">
            <h3 class="h4 mb-3">
              <a class="post-title" href="/posts/1">{data[0].title}</a>
            </h3>
            <ul class="card-meta list-inline">
              <li class="list-inline-item">
                <i class="ti-calendar"></i>{data[0].fecha}
              </li>
            </ul>
            <a href="/posts/1" class="btn btn-outline-primary">Leer mas →</a
            >
          </div>
        </article>
      </div>
      <div class="col-lg-4 mb-5">
        <h2 class="h5 section-title">Tendencia</h2>

        <article class="card mb-4">
          <div class="card-body d-flex">
            <img class="card-img-sm" src={data[1].img} />
            <div class="ml-3">
              <h4>
                <a href="/posts/2" class="post-title">{data[1].title}</a>
              </h4>
              <ul class="card-meta list-inline mb-0">
                <li class="list-inline-item mb-0">
                  <i class="ti-calendar"></i>{data[1].fecha}
                </li>
              </ul>
            </div>
          </div>
        </article>

        <article class="card mb-4">
          <div class="card-body d-flex">
            <img class="card-img-sm" src={data[2].img} />
            <div class="ml-3">
              <h4>
                <a href="/posts/3" class="post-title">{data[2].title}</a>
              </h4>
              <ul class="card-meta list-inline mb-0">
                <li class="list-inline-item mb-0">
                  <i class="ti-calendar"></i>{data[2].fecha}
                </li>
              </ul>
            </div>
          </div>
        </article>

        <article class="card mb-4">
          <div class="card-body d-flex">
            <img class="card-img-sm" src={data[8].img} />
            <div class="ml-3">
              <h4>
                <a href="/posts/9" class="post-title">{data[8].title}</a>
              </h4>
              <ul class="card-meta list-inline mb-0">
                <li class="list-inline-item mb-0">
                  <i class="ti-calendar"></i>{data[8].fecha}
                </li>
              </ul>
            </div>
          </div>
        </article>
      </div>

      <div class="col-lg-4 mb-5">
        <h2 class="h5 section-title">Popular</h2>

        <article class="card">
          <div class="post-slider slider-sm">
            <img
              src={data[9].img}
              class="card-img-top"
              alt="post-thumb"
            />
          </div>
          <div class="card-body">
            <h3 class="h4 mb-3">
              <a class="post-title" href="/posts/10">{data[9].title}</a>
            </h3>
            <ul class="card-meta list-inline">
              <li class="list-inline-item">
                <i class="ti-calendar"></i>{data[9].fecha}
              </li>
            </ul>
            <p>
                {data[9].descr}
            </p>
            <a href="/posts/10" class="btn btn-outline-primary"
              >Leer mas →</a
            >
          </div>
        </article>
      </div>
      <div class="col-12">
        <div class="border-bottom border-default"></div>
      </div>
    </div>
  </div>
</section>
