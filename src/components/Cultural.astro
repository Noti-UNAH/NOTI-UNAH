---
import CardNote from "./CardNote.astro";
import Cardsmall from "./Card.astro";

const response = await fetch("https://noti-unah.herokuapp.com/");
const data = await response.json();
---

<div class="container p-3">
  <CardNote />
  <div class="row">
    <h3>Noticias relacionadas</h3>
  </div>
  <div class="row">
    <div class="col">
      <Cardsmall
        src={data[20].img}
        fecha={data[20].fecha}
        href="/posts/21"
        title={data[20].title}
        body={data[20].descr}
      />
    </div>
    <div class="col">
      <Cardsmall
        src={data[21].img}
        fecha={data[21].fecha}
        href="/posts/22"
        title={data[21].title}
        body={data[21].descr}
      />
    </div>
    <div class="col">
      <Cardsmall
        src={data[22].img}
        fecha={data[22].fecha}
        href="/posts/23"
        title={data[22].title}
        body={data[22].descr}
      />
    </div>
  </div>
</div>