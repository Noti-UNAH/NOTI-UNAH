---
import Card from "./Card.astro";
import Cardwidgets from "./Cardwidgets.astro";
---

<section class="p-3">
  <div class="container">
    <div class="row">
      <!-- Blog entries-->
      <div class="col-lg-8">
        <!-- Featured blog post-->
