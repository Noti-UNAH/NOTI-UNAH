            <img src={data[3].img} class="card-img-top" alt="post-thumb" />
          </div>
          <div class="card-body">
            <h3 class="mb-3">
              <a class="post-title" href="/posts/4">{data[3].title}</a>
            </h3>
            <ul class="card-meta list-inline">
              <li class="list-inline-item">
                <i class="ti-calendar"></i>{data[3].fecha}
              </li>
            </ul>
            <p>{data[3].descr}</p>
            <a href="/posts/4" class="btn btn-outline-primary">Leer mas →</a>
          </div>
        </article>

